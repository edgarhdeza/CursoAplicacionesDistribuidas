@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Apps" Edge="Edge.Start"/>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Brightness6"/>
    </MudAppBar>

    <MudDrawer @bind-Open="@navOpen" ClipMode="DrawerClipMode.Docked">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

